print("How much Layers should I mine?")
local Num = tostring( read())
for i=1,Num do
 turtle.dig()
 turtle.forward()
 turtle.digDown()
 turtle.turnRight()
 turtle.dig()
 turtle.forward()
 turtle.digDown()
 turtle.down()
 turtle.digDown()
 turtle.turnLeft()
 turtle.turnLeft()
 turtle.forward()
 turtle.digDown()
 turtle.dig()
 turtle.forward()
 turtle.digUp()
 turtle.digDown()
 turtle.down()
 turtle.digDown()
 turtle.turnRight()
 turtle.turnRight()
 turtle.forward()
 turtle.digDown()

 turtle.forward()

 turtle.digDown()

 turtle.turnLeft()

 turtle.turnLeft()

 turtle.up()

 turtle.forward()

 turtle.turnRight()

 print("I have mined one layer!")
end