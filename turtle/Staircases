if turtle.getItemCount(2) < 1 then
print("Please put a stack or close to a stack of any block in slot two.")
sleep(5)
os.shutdown()
end
print("What kind of staircase do you want? Up or Down?")
if read() == "Up" then
print("How far do you want your upward staircase to go on for?")
dist = read()
for i=1, dist do
turtle.dig()
turtle.digUp()
turtle.select(2)
turtle.up()
turtle.forward()
turtle.placeDown()
end
for i=1, dist do
turtle.back()
turtle.down()
turtle.select(1)
turtle.placeDown()
end
else
print("How far do you want your downward staircase to go on for?")
dist = read()
for i=1, dist do
turtle.dig()
turtle.forward()
turtle.digUp()
turtle.digDown()
turtle.up()
turtle.digUp()
turtle.down()
turtle.down()
turtle.select(2)
turtle.placeDown()
end
for i=1, dist do
turtle.up()
turtle.back()
turtle.select(1)
turtle.placeDown()
end
end